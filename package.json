{
  "name": "z-grid",
  "version": "1.3.0",
  "description": "A 12-column grid system for your web application",
  "main": "dist/index.js",
  "minified:main": "dist/index.min.js",
  "jsnext:main": "dist/module.js",
  "module": "dist/module.js",
  "scripts": {
    "ava:bundle": "ava test/unit/testBundle.js",
    "ava:regression": "ava test/regression/suite",
    "babel:module": "babel --source-maps -o dist/module.js src/component.js",
    "build:module": "run-s create-output-dir babel:module",
    "build:test": "webpack --config test/unit/webpack.config.babel.js",
    "build": "run-p package min-package build:module",
    "clean": "rimraf dist",
    "create-output-dir": "mkdirp dist",
    "lint:css": "stylelint src/style.css",
    "lint:js": "eslint webpack.config.babel.js .storybook src stories test/regression test/unit/suite",
    "lint": "run-p lint:js lint:css",
    "min-package": "cross-env MIN=true webpack -p",
    "package": "webpack",
    "prepare": "npm run build",
    "regression-suite": "run-s wait-storybook-server ava:regression",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 6006",
    "test:regression": "node test/regression/startTest.js",
    "test:unit": "run-s build:test ava:bundle",
    "test": "run-s lint test:unit test:regression",
    "wait-storybook-server": "wait-on http-get://localhost:6006"
  },
  "ava": {
    "require": [
      "@babel/register",
      "@babel/polyfill"
    ],
    "babel": {
      "testOptions": {
        "plugins": [
          "@babel/plugin-syntax-jsx"
        ],
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "ignore": [
      "src/webcomponent"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": "2015",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": [
      "airbnb"
    ],
    "plugins": [
      "react",
      "import",
      "jsx-a11y"
    ],
    "rules": {
      "new-cap": "off",
      "import/no-extraneous-dependencies": "off",
      "import/no-unresolved": "off",
      "import/no-self-import": "off",
      "react/prop-types": "off",
      "react/jsx-filename-extension": "off",
      "global-require": "off"
    }
  },
  "postcss": {
    "plugins": {
      "postcss-at-rules-variables": {},
      "postcss-for": {},
      "postcss-custom-properties": {},
      "postcss-calc": {},
      "autoprefixer": {
        "browsers": "last 2 versions"
      },
      "cssnano": {
        "discardUnused": false
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-scss",
      "stylelint-selector-bem-pattern"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "scss/at-rule-no-unknown": true,
      "comment-whitespace-inside": null,
      "plugin/selector-bem-pattern": {
        "componentName": "[A-Z]+",
        "componentSelectors": {
          "initial": "^\\.{componentName}(?:-[a-z]+)?$",
          "combined": "^\\.combined-{componentName}-[a-z]+$"
        },
        "utilitySelectors": "^\\.util-[a-z]+$"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/z-kit/z-grid.git"
  },
  "keywords": [
    "z-kit",
    "component",
    "browser",
    "grid"
  ],
  "greenkeeper": {
    "ignore": [
      "eslint-config-airbnb",
      "eslint-plugin-import",
      "eslint-plugin-jsx-a11y"
    ]
  },
  "author": "Matheus Kautzmann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/z-kit/z-grid/issues"
  },
  "homepage": "https://github.com/z-kit/z-grid",
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.1.5",
    "@storybook/addons": "^v4.0.9",
    "@storybook/react": "^v4.0.9",
    "acorn": "^6.0.4",
    "autoprefixer": "^9.3.1",
    "ava": "^2.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "cross-env": "^5.2.0",
    "cross-spawn": "^6.0.5",
    "css-loader": "^1.0.1",
    "cssnano": "^4.1.7",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "handlebars": "^4.0.12",
    "handlebars-loader": "^1.7.0",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.4.5",
    "mkdirp": "^0.5.1",
    "nightmare": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "null-loader": "^0.1.1",
    "postcss-at-rules-variables": "^0.0.27",
    "postcss-calc": "^5.3.1",
    "postcss-custom-properties": "^5.0.2",
    "postcss-for": "^2.1.1",
    "postcss-loader": "^3.0.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "rimraf": "^2.6.2",
    "style-loader": "^0.23.1",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.4.1",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "wait-on": "^3.2.0",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "webpack-node-externals": "^1.7.2"
  }
}
